<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tic Tac Toe</title>
    <style>
        .container
        {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            width:150px;
            height:auto;
        }

        form
        {
            display: flex;
            flex-direction: column;
            float:left;
            width:50px;
            height:50px;
            justify-content: center;
            align-items: center;
        }

        button
        {
            width:100%;
            height:100%;
            font-size: 25px;
            cursor: pointer;
        }

        .box
        {
            font-size: 25px;
        }

        .controls
        {
            width:200px;
            height:100px;
            padding:20px;
        }

        .controls  button
        {
            width: auto;
        }
    </style>
</head>
<body>
    {{ message }}
    <h1>This is Tic Tac Toe Game!</h1>
    <div class="controls">
        <form method="post"><button type="submit" name="reset">Reset</button></form>
    </div>
    <div class="container">
        {% for row_key, row in board %}
            {% for col_key, col in row %}
                <form method="POST" row="{{ row_key }}" col="{{ col_key }}">
                    {% if col == "" %}
                        <input type="text" name="row" value="{{ row_key }}" hidden/>
                        <input type="text" name="column" value="{{ col_key }}" hidden/>
                        <button type="submit"></button>
                    {% else %}
                        <div class="box">{{ col }}</div>
                    {% endif %}
                </form>
            {% endfor %}
        {% endfor %}
    </div>
</body>
</html>
